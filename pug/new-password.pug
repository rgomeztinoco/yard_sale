extends components/_template.pug
include components/_mixins-forms.pug
block cssLink
  link(rel="stylesheet", href="./css/new-password.css")
block contenidos
  .login 
    .form-container 
      +logo
      +title({
        title: "Create a new password",
        subtitle: "Enter a new password for your account",
        })
      form.form(action="") 
        +forInput({
          idM: "password",
          classM: "password",
          typeM: "password",
          labelM: "Password",
          placeholderM: "************"})
        +forInput({
          idM: "re-password",
          classM: "password",
          typeM: "password",
          labelM: "Re-enter password",
          placeholderM: "************"})
        input.primary-button.login-button(type="submit" value="Confirm")